<launch>
  <arg name="sim" default="true" />

  <include file="$(find iai_table_robot_sim)/launch/ros_control_sim.launch" if="$(arg sim)" />

  <node pkg="tf2_ros" type="buffer_server" name="tf2_buffer_server" unless="$(arg sim)"/>


  <node pkg="giskard_ros" type="qp_controller_trajectory" name="qp_controller" output="screen" >
    <remap from="~joint_states" to="/joint_states" />
    <remap from="~follow_joint_trajectory" to="/whole_body_controller/follow_joint_trajectory" />
    <remap from="~joint_trajectory_controller_state" to="/whole_body_controller/state"/>

    <rosparam command="load" file="$(find giskard_iai_table_robot)/config/table_robot_qp_controller.yaml" />
  </node>

</launch>
